/* pages/car/index/index.wxss */
.cont{
  padding-bottom: 130rpx;
}
.white_box{
  padding: 20rpx 0;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.icon{
  margin: 0 40rpx 0 0;
}
.inventory{
  overflow: hidden;
  padding: 0 40rpx;
}
.inventory_img{
  width: 150rpx;
  height: 150rpx;
  background: #8C8C8C;
  vertical-align: middle;
}
.text_box{
  width: 400rpx;
  font-size: 28rpx;
  overflow: hidden;
}
.compile_title{
  display: inline-block;
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.color_FE3615{
  color: #FE3615;
  font-size: 32rpx;
  margin-top: 10rpx;
}
.bottom_arrow{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 8rpx;
}
.subtotal{
  padding: 20rpx 40rpx 0;
  border-top: 1px solid #f1f1f1;
  text-align: right;
}
.subtotal>text{
  margin-left: 30rpx;
  color: #939393;
}




.bottom_box{
  width:100%;
  height:110rpx;
  background:#fff;
  position:fixed;
  bottom:0;
  border-bottom: 1px solid #ddd;
}
.check_all{
  margin: 28rpx 40rpx 0;
}
.check_all_text{
  display: inline-block;
  height:110rpx;
  line-height: 135rpx;
}
.check_all_text{
  width:160rpx;
  height:120rpx;
  line-height:120rpx;
  text-align:left;
  font-size:32rpx;
  position:absolute;
  top:0;
  left: 120rpx;
}
.bottom_box .total,.settle_accounts{
  height:120rpx;
  line-height:120rpx;
  text-align:center;
  font-size:32rpx;
  color:#fff;
  position:absolute;
  top:0;
}
.bottom_box .total{
  width:300rpx;
  margin: 0;
  right:220rpx;
  color: #000;
}
.settle_accounts{
   width:220rpx;
  right:0;
  background:#FE3615;
}


/*自定义弹窗*/
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  z-index: 2;
}
.pop_cont{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 3;
}
.pop_section{
  width: 100%;
  background: #fff;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.btn{
  margin: 0;
}
/*自定义弹窗内容*/
.commodity_img{
  width: 280rpx;
  height: 250rpx;
  border: 1px solid #ddd;
}
.pop_section .text_box{
  width: 430rpx;
}
.total{
  font-size: 24rpx;
  display: block;
  text-align: right;
  margin: 40rpx 0;
}
.specification_box{
  border-top:1px solid #ddd;
  padding: 20rpx 0 20rpx;
}
.specification_box text{
  color:#000;
  font-size: 28rpx;
}
.colour{
  margin-right: 15rpx;
}
.num_box{
  float: right;
  margin-left: 10rpx;
}
.num_box text{
  padding: 8rpx 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.subtract,.plus{ 
  background: #E1E1E1;
}
.num_box .num{
   min-width: 80rpx;
   padding: 6rpx 16rpx;
   display: inline-block;
   border-top: 1px solid #ddd;
   border-bottom: 1px solid #ddd;
   color: #000;
}
.repertory{
  text-align: right;
}