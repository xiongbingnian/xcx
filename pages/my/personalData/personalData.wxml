    <text>修改密码</text>
    <image class="next_step" src="../../../image/next_step.png"></image>
  </view>
  <view class="list_box" bindtap="changePhone">
    <text>修改手机号</text>
    <image class="next_step" src="../../../image/next_step.png"></image>
  </view>
</view>

