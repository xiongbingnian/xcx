    <view class="change_head_box">
      <image class="change_head_img" src="../../../image/change_head.png"></image>
      <text>更换头像</text>
    </view>
  </view>
  <view class="list_box">
    <text>用户名</text>
    <image class="next_step" src="../../../image/next_step.png"></image>
