/* pages/my/indentPage/indentPage.wxss */
.white_box{
  background: #fff;
  padding: 20rpx 40rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color:#000;
  position: relative;
  overflow: hidden;
}
.text_block{
  display: block;
}
.color_FF3121{
  color: #FF3121;
  font-size: 36rpx;
}
.order_number{
  margin-bottom: 15rpx;
}
.white_box>.title{
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #DDDDDD;
}
.detailed_address,.name,.phone_num,.color_7A7A7A{
  color: #7A7A7A;
}
.name,.phone_num{
  margin-right:30rpx;
}
.detailed_address{
  margin-top: 15rpx;
}
.bottom_arrow{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 40rpx;
}
.inventory{
  overflow: hidden;
}
.inventory_img{
  background:#DDDDDD;
  width: 160rpx;
  height: 160rpx;
}
.text_box{
  float: right;
  width: 480rpx;
}
.text_box>view{
  margin-bottom: 10rpx;
}
.inventory_title{
  display: inline-block;
  width: 380rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.price{
  float: right;
}
.btn_box {
  width: 100%;
  padding: 20rpx 40rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.btn_box .btn{
  float: right;
  font-size: 30rpx; 
  padding: 8rpx 32rpx;
  border: 1rpx solid #FF3121;
  color: #FF3121;
  margin-left: 20rpx;
  background: transparent;
  margin-top: 10rpx;
}
.btn_box .btn_active{
  background: #FF3121;
  color: #fff;
}