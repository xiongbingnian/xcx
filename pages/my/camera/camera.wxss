/* pages/my/camera/camera.wxss */
@import "../../nearby/industryShopsPage/industryShopsPage.wxss";
.img_box{
  padding: 0 35rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:flex-start;
  align-items: center;
  
}
.shop_img,.add_img{
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  line-height:200rpx;
  text-align: center;
  background: #B5B5B5;
  margin: 0 5rpx 10rpx;
}
.no_padding_tb{
  padding: 0 40rpx;
}
.next_step,.bottom_arrow{
  right: 0;
}
.color_A2A2A2{
  color: #A2A2A2;
}
.phone_input,.site_input{
  display: inline-block;
  width: 500rpx;
  height: 30rpx;
  min-height: 30rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.border_bottom{
  padding: 20rpx 0;
  border-bottom:1px solid #f1f1f1; 
  position: relative;
}
.no_border{
  border: none;
}
.intro_text{
  width: 335px;
  height: 200rpx;
  position: relative!important;
  z-index: 1!important;
}
.btn{
  margin: 40rpx 0;
}
.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  background: #000;
  opacity: 0.5;
  z-index: 2000;
}
.hint_main{
  width: 500rpx;
  height: 340rpx;
  background: #fff;
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  opacity: 1;
  z-index: 2001;
}
.pop_header{
  display: block;
  text-align: center;
  padding: 20rpx 0;
  background: #F1F1F1;
}
.pop_text{
  display: block;
  padding: 60rpx;
}