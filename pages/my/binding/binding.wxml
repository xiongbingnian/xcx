<view class="cont bg_F1F1F1">
  <view class="site_box">
    <image class="i_site2" src="../../../image/i_site2.png"></image>
    <text class="site_text">广东省广州市花都区毕村北路三号之八</text>
    <view class="reposition">重新定位</view>
  </view>
  <view class="nearby_box">
    <text>附近店铺</text>
    <image class="refresh" src="../../../image/refresh.png"></image>
  </view>
