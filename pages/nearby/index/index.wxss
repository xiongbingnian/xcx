/* pages/nearby/index/index.wxss */
.industry_search{
  width: 430rpx;
  display: inline-block;
}
.btn_search{
  width: 90rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  text-align: center;
  color: #646464;
}
.commodity_box{
  width: 100%;
  padding: 20rpx 0 0 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
  align-items: center;
  margin: 0 0 10rpx 0;
}
.commodity_item{
  width: 150rpx;
  height: 160rpx;
  text-align: center;
  margin: 10rpx 0;
  
}
.commodity_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
} 
.commodity-name{
  display: block;
  text-align: center;
  font-weight: 500;
  color: #101010;
  font-size:28rpx;
}

