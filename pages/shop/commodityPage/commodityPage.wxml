<view class="{{filtratePop==1?'hide':'show'}}">
  <view class="mask" bindtap="filtrateHide"></view>
  <view class="pop_cont">
    <view class="pop_section">
      <view class="title">筛选</view>
      <view>
        <view class="subtitle">品牌</view>
        <view class="filtrate_box">
          <text>主力</text>
          <text>上值</text>
          <text>必能</text>
        </view>
        <view class="shrink">
          <view>
            <text>展开</text>
            <image class="bottom_arrow" src="../../../image/bottom_arrow.png"></image>
          </view>
        </view>
      </view>

      <view>
        <view class="subtitle">分类</view>
        <view class="filtrate_box">
          <text>本册</text>
          <text>凭证</text>
