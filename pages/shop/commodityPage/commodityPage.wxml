          </view>
        </view>
      </view>

      <view>
        <view class="subtitle">价格区间</view>
        <view class="filtrate_box">
          <input class="min_price" placeholder="最低价" />
          <view class="hr"></view>
          <input class="max_price" placeholder="最高价" />
        </view>
      </view>
      <view class="btn_box">
        <view class="btn btn_active" bindtap="filtrateHide">确定</view>
