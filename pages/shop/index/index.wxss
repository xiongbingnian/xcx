.i_search{
  width:45rpx;
  height:30rpx;
  position:absolute;
  top:20rpx;
  left:140rpx
}
/*微信授权样式*/
.mask{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: fixed;
  top:0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 100;
}
.pop_main{
  width: 90%;
  position: fixed;
  top: 20%;
  left: 0;
  right: 0;
  margin: auto;
  background: #fff;
  padding: 8% 5%;
  box-sizing: border-box;
  z-index: 101;
}
.hint_txt_box{
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ddd;
  margin-bottom: 30rpx;
}
.title{
  font-size: 50rpx;
  color: #353535;
  display: block;
  margin-bottom: 30rpx;
}
.logo{
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.dot{
  width: 18rpx;
  height: 18rpx;
  background: #AAAAAA;
  border-radius: 50%;
  margin:0 20rpx;
}
.color_757575{
  color: #757575;
}
.color_48C23D{
  color: #48C23D;
}
.inquiry_box{
  margin-top: 70rpx;
  text-align: right;
}
.inquiry_box text{
  display: inline-block;
  margin-left: 50rpx;
}
