}
.aside_li>text{
   font-size: 26rpx;
   margin-left:30rpx; 
}
.r_arrows_active,.r_arrows{
  width: 22rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  right: 20rpx;
}
.main{
   width: 545rpx;
}
.main_item{
   background: #fff;
   padding: 10rpx 0;
   overflow: hidden;
   margin-bottom:10rpx;
}
.main_item:last-child{
  margin-bottom:0;
}
.main_item .text_box{
  float: right;
  width: 330rpx;
  margin-right: 20rpx;
}
.main_item .commodity_centre{
  width: 180rpx;
  height: 200rpx;
}
.main_title{
  font-size: 26rpx;
